<% #ユーザー詳細ページ %>
<h2 class="text-center"><%= @user.name %></h2>
<div class="text-center">
  <% if current_user == @user %>
  <a href="<%= followings_user_path(current_user) %>" class="btn btn-outline-dark">フォロー　<span><%= @count_followings %>人</span></a>
  <a href="<%= followers_user_path(current_user) %>" class="btn btn-outline-dark">フォロワー　<span><%= @count_followers %>人</span></a>
  <a href="<%= likes_user_path(current_user) %>" class="btn btn-outline-dark">お気に入り　<span><%= @count_likes %>つ</span></a>
<% end %>
</div>


<%= render 'relationships/follow_button', user: @user %>

<%= render "questions/questions", questions: @questions %>


