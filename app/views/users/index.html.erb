<% if @users.any? %>
  <ul class="list-unstyled">
    <% @users.each do |user| %>
      <li class="media">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
<% end %>

<%= link_to '新規ユーザー登録', new_user_path, class: 'btn btn-lg btn-primary' %>
<%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary' %>
<%= link_to 'Logout', logout_path, method: :delete, class: 'btn btn-lg btn-primary' %>
